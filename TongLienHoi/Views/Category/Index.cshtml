@using HTTLVN.QLTLH.Models1
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutNull.cshtml";
}

@(Html.Kendo().Grid<Category>().Name("people")
    .DataSource(dataSource => dataSource
        .Ajax()
        .Model(model =>
        {
            model.Id(m => m.Id);
        })
            .Read(read => read.Action("GetCategory", "Category"))
            .Update(up => up.Action("UpdateCategory", "Category"))
            .Create(create => create.Action("CreateCategory", "Category"))
    )
    .Columns(columns =>
    {
        columns.Bound(c => c.Id);
        columns.Bound(c => c.Name);
        columns.Bound(c => c.Description);
        columns.Bound(c => c.ImageUrl).ClientTemplate("<img src='" + Url.Content("~/CategoryImage/") + "#=ImageUrl#' alt='#=Name #' Title='#=Name #' height='62' width='62'/>");
        columns.Command(cmd => cmd.Edit());
    })
    .ToolBar(tools =>
                     {
                         tools.Create();
                     })
    .Editable(ed => ed.Mode(Kendo.Mvc.UI.GridEditMode.PopUp))
    .Pageable()
    .Sortable()
)