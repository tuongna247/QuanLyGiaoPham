@model HTTLVN.QLTLH.Models.Church_TinHuu

@{
    ViewBag.Title = "Delete";
      var erros = (Dictionary<string, string>)ViewBag.Errors;
}
}

<form method="post" class="form-horizontal form-box" enctype="multipart/form-data"  id="basic-wizard">
    <h4 class="form-box-header">Cập nhật thông tin nhiệm sở</h4>
    <div class="form-box-content">
        <div id="first" class="step">
             @if (erros != null && erros.Count > 0)
            {
                <div class="eUserError">
                    <div style="margin-left: 40px;">
                        Có lỗi xảy ra, xin kiểm tra lại!
                    </div>
                    <ul class="related fixedwidth list-arrow-bold">
                        @foreach (var str in erros)
                        {
                            <li>@str.Value</li>    
                        }
                    </ul>
                </div>
            }
            <div class="form-group">
                @Html.HiddenFor(a=>a.Church_Id)
                <label class="control-label col-md-2">@Html.LabelFor(model => model.SoLuongTinHuu, "Số lượng tín hữu")</label>
                <div class="col-md-2">
                    <p class="form-control-static capital">@Model.SoLuongTinHuu</p>
                </div>
                <label class="control-label col-md-2">@Html.LabelFor(model => model.NamThongKe, "Năm thống kê")</label>
                <div class="col-md-2">
                    <p class="form-control-static capital">@Model.NamThongKe</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.TinHuuBapTem, "Báp têm")</label>
                <div class="col-md-2">
                     <p class="form-control-static capital">@Model.TinHuuBapTem</p>
                </div>
                <label class="control-label col-md-2">@Html.LabelFor(model => model.TinHuuChuaBapTem, "Chưa báp têm")</label>
                <div class="col-md-2">
                    <p class="form-control-static capital">@Model.TinHuuChuaBapTem</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.LuaTuoiThieuNhi, "Thiếu nhi")</label>
                <div class="col-md-2">
                    <p class="form-control-static capital">@Model.LuaTuoiThieuNhi</p>
                </div>
                  <label class="control-label col-md-2">@Html.LabelFor(model => model.LuaTuoiThieuNien, "Thiếu niên")</label>
                <div class="col-md-2">
                    <p class="form-control-static capital">@Model.LuaTuoiThieuNien</p>
                </div>
                <label class="control-label col-md-2">@Html.LabelFor(model => model.LuaTuoiThanhNien, "Thanh niên")</label>
                <div class="col-md-2">
                   <p class="form-control-static capital">@Model.LuaTuoiThanhNien</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.LuaTuoiTrangNien, "Tráng niên")</label>
                <div class="col-md-2">
                    <p class="form-control-static capital">@Model.LuaTuoiTrangNien</p>
                </div>
                  <label class="control-label col-md-2">@Html.LabelFor(model => model.LuaTuoiTrungNien, "Trung niên")</label>
                <div class="col-md-2">
                     <p class="form-control-static capital">@Model.LuaTuoiTrungNien</p>
                </div>
                 <label class="control-label col-md-2">@Html.LabelFor(model => model.LuaTuoiLaoNien, "Lão niên")</label>
                <div class="col-md-2">
                   <p class="form-control-static capital">@Model.LuaTuoiLaoNien</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.GioiTinhNam, "Số lượng Nam")</label>
                <div class="col-md-2">
                    <p class="form-control-static capital">@Model.GioiTinhNam</p>
                </div>
                 <label class="control-label col-md-2">@Html.LabelFor(model => model.GioiTinhNu, "Số lượng Nữ")</label>
                <div class="col-md-2">
                     <p class="form-control-static capital">@Model.GioiTinhNu</p>
                </div>
            </div>
             <div class="form-group">
                <label class="control-label col-md-2"></label>
                <div class="col-md-10">
                    @if (ViewBag.IsCurrent != null && (bool) ViewBag.IsCurrent)
                     {
                     }
                     else
                     {
                         <input type="submit" value="Xóa"  class="btn btn-primary"/>
                     }
                    <a href="@Url.Content(string.Format("~/NhiemSo/QuaTrinhThanhLap/{0}", Model.Church_Id))" class="btn btn-primary">Quay lại</a>     
                </div>
            </div>
        </div>
    </div>
</form>


     