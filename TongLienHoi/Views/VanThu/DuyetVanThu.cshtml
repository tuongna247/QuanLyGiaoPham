@using HTTLVN.QLTLH.Code
@using HTTLVN.QLTLH.Models
@model HTTLVN.QLTLH.Models.Warper.VanThuDBO
@{
    ViewBag.Title = "VanThuDen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3 class="page-header page-header-top"><i class="fa fa-user"></i>Văn thư đến</h3>
<form method="POST" class="form-horizontal form-box" id="basic-wizard">
    <h4 class="form-box-header">Nội dung văn thư đến</h4>
    <div class="form-box-content">
        <div id="first" class="step">
            <div class="form-group">
                <label class="control-label col-md-2" for="ngayvanthu" >Ngày nhận văn thư:</label>
                <div class="col-md-3">
                    <label>@Model.NgayVanThu.ToString("dd/MM/yyyy")</label>
                    <input type="hidden" value="@ViewBag.VanThuId" name="vanthuId"/>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="noidung" >Nội dung:</label>
                <div class="col-md-10">
                    <label>
                        @Html.Raw(@Model.NoiDung)
                    </label>
                </div>
            </div>  
           <div class="form-group">
                <label class="control-label col-md-2" for="noidung">Nội dung phê duyệt:</label>
                <div class="col-md-10">
                    @Html.TextAreaFor(a=>a.NoiDungPheDuyet,6,80,null)
                </div>
           </div> 
            <div class="form-group">
                <label class="control-label col-md-2" for="noidung" >Được chấp thuận:</label>
                <div class="col-md-10">
                    <input type="checkbox" id="TrangThaiPheDuyet" name="TrangThaiPheDuyet" @if (Model.TrangThaiPheDuyet)
                                                                                           {
<text>checked="checked"</text>
                                                                                           }/>
                    (check nếu chấp thuận)
                </div>
            </div>  
            <div class="form-group form-actions">
			<div class="col-md-10">
			    <input type="submit" class="btn btn-success" name="btnnext" id="btnnext" value="Lưu">
                <a href="@Url.Action("Index")" class="btn btn-success">Danh sách văn thư</a>
			</div>
		</div>
        </div>
    </div>
</form>