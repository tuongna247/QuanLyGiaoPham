@using HTTLVN.QLTLH.Code
@using HTTLVN.QLTLH.Models
@model HTTLVN.QLTLH.Models.Warper.VanThuDBO
@{
    ViewBag.Title = "VanThuDen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form  method="post" class="form-horizontal form-box" id="basic-wizard">
    <h4 class="form-box-header">Bạn có chắc xóa nội dung sau?</h4>
    <div class="form-box-content">
        <div id="first" class="step">
            <div class="form-group">
                <label class="control-label col-md-2" for="mat" >Loại văn thư:</label>
                <div class="col-md-3">
                    <p class="form-control-static">@if (Model.LoaiVanDe=="1"){<text>Văn thư đến</text>}else if (Model.LoaiVanDe=="2"){<text>Văn thư đi</text>}</p>
                </div>
                <label class="control-label col-md-2" for="ngayvanthu" >Ngày gửi:</label>
                <div class="col-md-3">
                  <p class="form-control-static">@Helper.DisplayDateTime(Model.NgayVanThu)</p>
                    <input type="hidden" value="@ViewBag.VanThuId" name="vanthuId"/>
                </div>
               
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="chude" >Người gửi:</label>
                <div class="col-md-3">
                    <p class="form-control-static">@Model.NguoiGui</p>
                </div>
                <label class="control-label col-md-2" for="chude" >Người nhận:</label>
                <div class="col-md-3">
                    <p class="form-control-static">@Model.NguoiNhan</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="chude" >Về việc:</label>
                <div class="col-md-10">
                   <p class="form-control-static"> @Model.TieuDe</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="noidung" >Nội dung:</label>
                <div class="col-md-10">
                    <p style="white-space: pre;">@Model.NoiDung
                    </p>
                </div>
            </div>  
           <div class="form-group">
                <label class="control-label col-md-2" for="noidung" >Ghi chú:</label>
                <div class="col-md-10">
                   <p  style="white-space: pre;" class="form-control-static"> @Html.Raw(Model.GhiChu)</p>
                </div>
             </div> 
            <div class="form-group form-actions">
                <div class="col-md-10">
                    @if ((ViewBag.IsEditVanThu != null && ViewBag.IsEditVanThu == true))
                    {
                        <input type="submit" class="btn btn-success" name="btnnext" id="btnnext" value="Xóa"/>
                    }
                    <a href="@Url.Content("~/Vanthu/")" class="btn btn-success">Hủy</a>
                </div>
            </div>
        </div>
    </div>
</form>
