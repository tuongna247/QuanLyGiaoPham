@model HTTLVN.QLTLH.Models.BangCapNguoiPhoiNgau

@{
    ViewBag.Title = "Edit";
    var erros = (Dictionary<string, string>)ViewBag.Errors;
}
<form method="post" class="form-horizontal form-box" enctype="multipart/form-data"  id="basic-wizard">
    <h4 class="form-box-header">Cập nhật quá trình học thần học</h4>
    <div class="form-box-content">
        <div id="first" class="step">
            @if (erros != null && erros.Count > 0)
            {
                <div class="eUserError">
                    <div style="margin-left: 40px;">
                        Có lỗi xảy ra, xin kiểm tra lại!
                    </div>
                    <ul class="related fixedwidth list-arrow-bold">
                        @foreach (var str in erros)
                        {
                            <li>@str.Value</li>    
                        }
                    </ul>
                </div>
            }
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.ChuongTrinhThanHoc, "Chương trình thần học")</label>
                <div class="col-md-2">
                    @Html.HiddenFor(m=>m.Id)
                    @Html.HiddenFor(m=>m.QuanHeVoiGiaoPham_Id)
                    @Html.HiddenFor(m=>m.QuanHeVoiGiaoPham.ClergyId)
                    <div class="@Helper.CheckError(erros, "ChuongTrinhThanHoc")">       
                        @Html.TextBoxFor(a => a.ChuongTrinhThanHoc, new {  @class = "form-control" })
                    </div>
                </div>
            </div>    
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.NoiHoc, "Nơi học/Nơi chứng nhận")</label>
                <div class="col-md-2">
                    <div class="@Helper.CheckError(erros, "NoiHoc")">       
                        @Html.TextBoxFor(a=>a.NoiHoc, new { @class = "form-control" })
                    </div>
                </div>
            </div>   
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.NgayTotNghiep, "Ngày cấp chứng chỉ")</label>
                <div class="col-md-2">
                    <div class="@Helper.CheckError(erros, "NgayTotNghiep")">       
                        @Html.TextBoxFor(a => a.NgayTotNghiep, new { @placeholder = "dd/mm/yyyy", @class = "form-control" })
                    </div>
                </div>
            </div>    
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.StartDate, "Từ ngày")</label>
                <div class="col-md-2">
                    <div class="@Helper.CheckError(erros, "StartDate")">       
                        @Html.TextBoxFor(a => a.StartDate, new { @placeholder = "dd/mm/yyyy", @class = "form-control" })
                    </div>
                </div>
                <label class="control-label col-md-2">@Html.LabelFor(model => model.EndDate, "Đến ngày")</label>
                <div class="col-md-2">
                    <div class="@Helper.CheckError(erros, "EndDate")">       
                        @Html.TextBoxFor(a=>a.EndDate, new { @placeholder = "dd/mm/yyyy", @class = "form-control" })
                    </div>
                </div>
            </div>    

            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.ChungChi, "Chứng chỉ")</label>
                <div class="col-md-2">
                    <input type="text" id="txtChungChi" name="txtChungChi" placeholder="Chưa chọn chứng chỉ" value="@Helper.HumanRead(Model.ChungChi)" class="form-control"/>
                </div>
                <div class="col-md-3">
                    <label>
                        <input type="file" name="ChungChi" id="ChungChi"  onchange="readURL(this);"  /> <span class="btn btn-default">Chọn chứng chỉ</span>
                    </label>
                </div>
            </div>  
           
            <div class="form-group">
                <label class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input type="submit" value="Lưu" name="btnSave" class="btn btn-primary"/>  
                    <a class="btn btn-default" href="@Url.Content(string.Format("~/Home/MucsuThongTinGiaDinh/{0}", Model    .QuanHeVoiGiaoPham.ClergyId))">Trở lại</a>
                </div>
            </div>
        </div>
    </div>
</form>
<style>
    label input[type="file"] {
        position: fixed;
        top: -1000px;
    }
</style>
<script>
    function readURL(input) {
        if (input.files && input.files[0]) {//Check if input has files.
            var reader = new FileReader(); //Initialize FileReader.
            reader.onload = function (e) {
                $('#txtChungChi').attr('value', input.files[0].name);
            };
            reader.readAsDataURL(input.files[0]);
        }
        else {
            $('#txtChungChi').attr('placeholder', "Chưa chọn chứng chỉ");
        }
    }
</script>
