@model HTTLVN.QLTLH.Models.ChucVu

@{
    ViewBag.Title = "Xoá chức vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h3>Bạn có chắc xoá dòng nầy không?</h3>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <h4>Chỉnh sửa chức vụ</h4>
        <hr />
        @Html.HiddenFor(model => model.id)
        <div class="form-group">
            <label class=" col-md-2" for="Name">Tên chức vụ</label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xoá" class="btn btn-default" />
                @Html.ActionLink("Huỷ", "Index", null, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}