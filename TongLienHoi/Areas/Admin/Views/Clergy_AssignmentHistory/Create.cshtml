
@model HTTLVN.QLTLH.Models.Clergy_AssignmentHistory

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Tạo mới";
    var erros = (Dictionary<string, string>)ViewBag.Errors;
}

<form method="post" class="form-horizontal form-box" enctype="multipart/form-data"  id="basic-wizard">
    <h4 class="form-box-header">Được nhận nhiệm sở</h4>
    <div class="form-box-content">
        <div id="first" class="step">
            @if (erros != null && erros.Count > 0)
            {
                <div class="eUserError">
                    <div style="margin-left: 40px;">
                        Có lỗi xảy ra, xin kiểm tra lại!
                    </div>
                    <ul class="related fixedwidth list-arrow-bold">
                        @foreach (var str in erros)
                        {
                            <li>@str.Value</li>    
                        }
                    </ul>
                </div>
            }
            <input type="hidden" name="ClergyId" value="ViewBag.ClergyId"/>
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.ChurchId, "Nhiệm sở")</label>
                <div class="col-md-2">
                    <div class="@Helper.CheckError(erros, "ChurchId")">
                        @Html.HiddenFor(model => model.id)
                        @Html.HiddenFor(model=>model.ClergyId)
                        @(Html.Kendo().DropDownListFor(a => a.ChurchId).Filter("contains")
                              .DataTextField("Name").DataValueField("Id")
                              .HtmlAttributes(new { style = "width:100%" })
                                      .DataSource(source => { source.Custom().Transport(read => { read.Read(a => a.Url(Url.Content("~/JsonLoader/GetHoiThanh"))); }); })
                              )
                    </div>
                </div>
                <label class="control-label col-md-1">@Html.LabelFor(model => model.CapChiHoi, "Cấp chi hội")</label>
                <div class="col-md-2">
                    <div class="@Helper.CheckError(erros, "CapChiHoi")">
                        @(Html.Kendo().DropDownListFor(a => a.CapChiHoi).Filter("contains")
                              .DataTextField("Name").DataValueField("Id")
                              .HtmlAttributes(new { style = "width:100%" })
                                      .DataSource(source => { source.Custom().Transport(read => { read.Read(a => a.Url(Url.Content("~/JsonLoader/GetCapChiHoiWithAll"))); }); })
                              )
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.ChucVuId, "Chức vụ")</label>
                <div class="col-md-2">
                    <div class="@Helper.CheckError(erros, "ChucVuId")">
                        @(Html.Kendo().DropDownListFor(a => a.ChucVuId).Filter("contains")
                              .DataTextField("Name").DataValueField("Id")
                              .HtmlAttributes(new { style = "width:100%" })
                                      .DataSource(source => { source.Custom().Transport(read => { read.Read(a => a.Url(Url.Content("~/JsonLoader/GetChucVu"))); }); })
                              )
                    </div>
                </div>
                <label class="control-label col-md-1">@Html.LabelFor(model => model.TitleId, "Chức danh")</label>
                <div class="col-md-2">
                    <div class="@Helper.CheckError(erros, "ChucVuId")">
                        @(Html.Kendo().DropDownListFor(a => a.TitleId).Filter("contains")
                              .DataTextField("Name").DataValueField("Id")
                              .HtmlAttributes(new { style = "width:100%" })
                                      .DataSource(source => { source.Custom().Transport(read => { read.Read(a => a.Url(Url.Content("~/JsonLoader/GetChucDanh"))); }); })
                              )
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.Term, "Nhiệm kỳ")</label>
                <div class="col-md-2">
                    <table>
                        <tr>
                            <td style="padding: 2px; width: 50%">
                                @(Html.Kendo().TextBoxFor(a => a.Term).HtmlAttributes(new { style = "width:100%" }))
                            </td>
                            <td style="padding: 2px;">
                                @(Html.Kendo().DropDownListFor(a => a.TermType).Filter("contains")
                                      .DataTextField("Name").DataValueField("Name")
                                      .HtmlAttributes(new { style = "width:100%" })
                                              .DataSource(source => { source.Custom().Transport(read => { read.Read(a => a.Url(Url.Content("~/JsonLoader/GetAllTermType"))); }); })
                                      )
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
            <div class="form-group">
                 <label class="control-label col-md-2">@Html.LabelFor(model => model.StartDate, "Từ năm")</label>
                <div class="col-md-2">
                    <div class="@Helper.CheckError(erros, "StartDate")">
                        @Html.TextBoxFor(a => a.StartDate, new { @placeholder = "dd/mm/yyyy", @class = "form-control" })
                    </div>
                </div>
                <label class="control-label col-md-1">@Html.LabelFor(model => model.EndDate, "Đến năm")</label>
                <div class="col-md-2">
                    <div class="@Helper.CheckError(erros, "EndDate")">
                        @Html.TextBoxFor(a => a.EndDate, new { @placeholder = "dd/mm/yyyy", @class = "form-control" })
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.TermNumber, "Nhiệm kỳ lần thứ")</label>
                <div class="col-md-2">
                    @(Html.Kendo().TextBoxFor(m => m.TermNumber))
                </div>
                <label class="control-label col-md-1">@Html.LabelFor(model => model.TyLeLuu, "Tỷ lệ lưu/mời (%)")</label>
                <div class="col-md-2">
                    @(Html.Kendo().TextBoxFor(m => m.TyLeLuu))
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.Paper, "Giáo vụ lệnh")</label>
                 <div class="col-md-2">
                    <input type="text" id="txtChungChi" name="txtChungChi" placeholder="Chưa chọn giáo vụ lệnh" class="form-control"/>
                </div>
                <div class="col-md-2">
                    <label>
                        <input id="Paper" name="ApprovalPaper" class="form-control"  onchange="readURL(this);"   type="file"/>
                        <span class="btn btn-default">Chọn GVL</span>
                    </label>
                </div>
                <label class="control-label col-md-2">@Html.LabelFor(model => model.PaperNumber, "Số GVL")</label>
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.PaperNumber,new {@class="form-control"})
                </div>
            </div>    
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.Paper, "Biên Bản CQ")</label>
                <div class="col-md-2">
                    <input type="text" id="txtChinhQuyenCN" name="ChinhQuyenCN" value="@Helper.HumanRead(Model.ChinhQuyenCN)" placeholder="Chưa chọn biên bản CQ" class="form-control" />
                </div>
                <div class="col-md-2">
                    <label>
                        <input id="Paper" name="ChinhQuyenCN" class="form-control" onchange="readURLCQ(this);" type="file" />
                        <span class="btn btn-default">Chọn Biên Bản CQ</span>
                    </label>
                </div>
                <label class="control-label col-md-2">@Html.LabelFor(model => model.ChinhQuyenCNSo, "Số Biên Bản CQ")</label>
                <div class="col-md-2">
                    @Html.TextBoxFor(model => model.ChinhQuyenCNSo, new { @class = "form-control" })
                </div>
            </div> 
            <div class="form-group">
                <label class="control-label col-md-2"></label>
                <div class="col-md-2">
                    <label class="checkbox-inline"><input type="checkbox" name="IsCurrent" value="true" class="checkbox "/> @Html.LabelFor(model => model.IsCurrent, "Nơi đang hầu việc Chúa") </label>
                </div>
            </div> 
            <div class="form-group">
                <label class="control-label col-md-2">@Html.LabelFor(model => model.Information, "Ghi chú")</label>
                <div class="col-md-5">
                    @Html.TextAreaFor(model => model.Information, 4, 40, new {@style="width: 100%"})
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2"></label>
                <div class="col-md-10">
                    <input type="submit" value="Lưu" name="btnSave"  class="btn btn-primary"/>  
                    <a href="@Url.Content(string.Format("~/home/MucsuThongTinChucVu/{0}", ViewBag.ClergyId))" class="btn btn-primary">Quay lại</a>     
                </div>
            </div>
        </div>
    </div>
</form>
<style>
    label input[type="file"] {
        position: fixed;
        top: -1000px;
    }
</style>
<script>
    function readURL(input) {
        if (input.files && input.files[0]) {//Check if input has files.
            var reader = new FileReader(); //Initialize FileReader.
            reader.onload = function (e) {
                $('#txtChungChi').attr('value', input.files[0].name);
            };
            reader.readAsDataURL(input.files[0]);
        }
        else {
            $('#txtChungChi').attr('placeholder', "Chưa chọn chứng chỉ");
        }
    }

    function readURLCQ(input) {
        if (input.files && input.files[0]) {//Check if input has files.
            var reader = new FileReader(); //Initialize FileReader.
            reader.onload = function (e) {
                $('#txtChinhQuyenCN').attr('value', input.files[0].name);
            };
            reader.readAsDataURL(input.files[0]);
        }
        else {
            $('#txtChinhQuyenCN').attr('placeholder', "Chưa chọn biên bản CQ");
        }
    }
</script>
